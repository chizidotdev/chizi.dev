---
import type { SanityDocument } from "@sanity/client";
import { loadQuery } from "@/sanity/lib/load-query";
import MainLayout from "@/layouts/main.astro";
import { Heading, Paragraph } from "@/components/ui/text";
import { cn, formatDate } from "@/lib/utils";
import PortableText from "@/components/portable-text.astro";
import { Badge } from "@/components/ui/badge";

export async function getStaticPaths() {
  const { data: snippets } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "post"]`,
  });

  return snippets.map(({ slug }) => {
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;

const { data: post } = await loadQuery<SanityDocument>({
  query: `*[_type == "post" && slug.current == $slug][0] { ..., "category": category->title }`,
  params,
});

const { data: allPosts } = await loadQuery<SanityDocument[]>({
  query: `*[_type == "post"] | order(publishedAt desc) {
    title,
    "slug": slug.current,
    publishedAt,
    _id
  }`,
});

const currentIndex = allPosts.findIndex((p) => p._id === post._id);
const navigationPosts = allPosts.slice(Math.max(0, currentIndex - 2), currentIndex + 3);
---

<MainLayout title={post.title}>
  <hgroup class="space-y-1">
    {
      !!post.category && (
        <div class="flex items-center gap-0.5">
          <Badge variant="outline">{post.category}</Badge>
        </div>
      )
    }
    <Heading>{post.title}</Heading>
    <Paragraph className="text-muted-foreground text-sm">
      {formatDate(new Date(post._createdAt))}
    </Paragraph>
  </hgroup>

  <div class="relative grid gap-20 lg:grid-cols-[minmax(0,1fr)_200px]">
    <article class="editor max-w-full space-y-2">
      <PortableText portableText={post.body} />
    </article>

    <aside class="sticky top-20 hidden h-fit text-sm lg:block">
      <Heading variant="h4" className="mb-6">Writing</Heading>
      <nav class="w-full space-y-2">
        {
          navigationPosts.map((navPost) => (
            <a
              href={`/writing/${navPost.slug}`}
              class={cn("block", navPost._id === post._id ? "text-foreground" : "link")}
            >
              <Paragraph>{navPost.title}</Paragraph>
            </a>
          ))
        }
      </nav>
    </aside>
  </div>
</MainLayout>
